{% extends "master" %}

{% block content %}

<div class="content">
  <div class="clearfix"></div>
  <div class="clearfix"></div>
    <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Organisers ({{ organizers.length }})</h3>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-striped text-center" id="users-table">
              <thead>
                  <th></th>
                  <th>Name</th>
                  <th>Company Name</th>
                  <th>Location</th>
                  <th>Event Type</th>
                  <th>Date Joined</th>
                  <th colspan="3">Action</th>
              </thead>
              <tbody>
              {% for organizer in organizers %}
                  <tr>
                      <td></td>
                      <td>{{ organizer.name }}</td>
                      <td>
                        {% if organizer.isCompany %}
                          {{ organizer.companyName }}
                        {% else %}
                          <span class="label label-info">Not Company</span>
                        {% endif %}
                      </td>
                      <td>{{ organizer.locationName }}</td>
                      <td>
                        {% for type in organizer.eventType %}
                          <span class="label label-success">{{ type | title }}</span>
                        {% endfor %}
                      </td>
                      <td>{{ formatTime(organizer.createdAt) }}</td>
                      <td>
                        <form class="" action="" method="post">
                          <div class='btn-group'>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-eye-open"></i></a>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-edit"></i></a>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-trash"></i></a>
                          </div>
                        </form>
                      </td>
                  </tr>
                {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
</div>
<a class="btn bg-purple fab" href="/manage/organisers/create"><i class="fa fa-plus"></i></a>


{% endblock %}
