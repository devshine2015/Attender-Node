{% extends "master" %}

{% block content %}
<section class="content-header">
  <h1 class="pull-left">Organisers ({{ organizers.length }})</h1>
  <h1 class="pull-right">
     <a class="btn btn-primary pull-right" style="margin-top: -10px;margin-bottom: 5px" href="/organisers/create">Add New Organiser</a>
  </h1>
  <div style="margin: 15px;"></div>
</section>
<div class="content">
  <div class="clearfix"></div>
  <div class="clearfix"></div>
    <div class="box box-primary">
        <div class="box-body table-responsive">
          <table class="table table-striped text-center" id="users-table">
              <thead>
                  <th></th>
                  <th>Name</th>
                  <th>Company Name</th>
                  <th>Location</th>
                  <th>Event Type</th>
                  <th>Date Joined</th>
                  <th colspan="3">Action</th>
              </thead>
              <tbody>
              {% for organizer in organizers %}
                  <tr>
                      <td></td>
                      <td>{{ organizer.name }}</td>
                      <td>
                        {% if organizer.isCompany %}
                          {{ organizer.companyName }}
                        {% else %}
                          <span class="label label-info">Not Company</span>
                        {% endif %}
                      </td>
                      <td>{{ organizer.locationName }}</td>
                      <td>
                        {% for type in organizer.eventType %}
                          <span class="label label-success">{{ type | title }}</span>
                        {% endfor %}
                      </td>
                      <td>{{ venue.createdAt }}</td>
                      <td>
                        <form class="" action="" method="post">
                          <div class='btn-group'>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-eye-open"></i></a>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-edit"></i></a>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-trash"></i></a>
                          </div>
                        </form>
                      </td>
                  </tr>
                {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
</div>


{% endblock %}
