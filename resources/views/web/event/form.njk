<div class="form-group">
  <label>Name</label>
  <input type="text" name="name" value="{{event.name}}" class="form-control">
</div>
<div class="form-group">
  <label>Description</label>
  <textarea name="description" class="form-control" value="{{event.description}}" rows="8" cols="80"></textarea>
</div>
<div class="row">
  <div class="col-sm-12 col-lg-6">
    <div class="form-group">
      <label>Date</label>
      <input type="text" readonly name="date" class="form-control datepicker" value="{{event.date}}">
    </div>
  </div>
  <div class="col-sm-12 col-lg-6 row">
    <div class="col-sm-6">
      <div class="form-group">
        <label>Start Time</label>
        <input type="text" readonly class="form-control timepicker" name="start_time" value="{{event.time.start}}">
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <label>End Time</label>
        <input type="text" readonly class="form-control timepicker" name="end_time" value="{{event.time.end}}">
      </div>
    </div>
  </div>
</div>
<div class="form-group">
  <label>Staff of Interest</label>
  <div class="form-group">
    <div class="row">
      {% for staff in staff_positions %}
        {% set loopIndex = loop.index0 %}
        <div class="col-xs-12 col-lg-2 col-md-6">
          <button id="s-{{loopIndex}}" type="button" class="btn btn-default btn-block" name="button">{{ staff | title }}</button>
          <input id="q-{{loopIndex}}" min="0" style="display: none;" type="number" placeholder="Quantity" class="form-control"  name="" value="">
        </div>
      {% endfor %}
    </div>

  </div>
</div>
