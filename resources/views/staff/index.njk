{% extends "master" %}

{% block content %}
<section class="content-header">
  <h1 class="pull-left">Staffs ({{ staffs.length }})</h1>
  <h1 class="pull-right">
     <a class="btn btn-primary pull-right" style="margin-top: -10px;margin-bottom: 5px" href="/staffs/create">Add New Staff</a>
  </h1>
  <div style="margin: 15px;"></div>
</section>
<div class="content">
  <div class="clearfix"></div>
  <div class="clearfix"></div>
    <div class="box box-primary">
        <div class="box-body table-responsive">
          <table class="table table-striped text-center" id="users-table">
              <thead>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Mobile</th>
                  <th>Gender</th>
                  <th>Position</th>
                  <th>Frequency</th>
                  <th>Rate</th>
                  <th>Date Joined</th>
                  <th colspan="3">Action</th>
              </thead>
              <tbody>
              {% for staff in staffs %}
                  <tr>
                      <td>{{ staff.fullname | title }}</td>
                      <td>{{ staff.email }}</td>
                      <td>{{ staff.mobile }}</td>
                      <td>{{ staff.gender | title }}</td>
                      <td>
                        {% for position in staff.position %}
                          <span class="label label-warning">{{ position | title }}</span>
                        {% endfor %}
                      </td>
                      <td>{{ staff.frequency | title }}</td>
                      <td>
                        <span class="label label-primary">{{ staff.startRate }}</span> - <span class="label label-primary">{{ staff.endRate }}</span>
                      </td>
                      <td><span class="label label-success">{{ formatTime(staff.createdAt) }}</span></td>
                      <td>
                        <form class="" action="" method="post">
                          <div class='btn-group'>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-eye-open"></i></a>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-edit"></i></a>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-trash"></i></a>
                          </div>
                        </form>
                      </td>
                  </tr>
                {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
</div>


{% endblock %}
