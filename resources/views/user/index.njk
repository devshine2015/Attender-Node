{% extends "master" %}

{% block content %}
<section class="content-header">
  <h1 class="pull-left">Users ({{ users.length }})</h1>
  <h1 class="pull-right">
     <a class="btn btn-primary pull-right" style="margin-top: -10px;margin-bottom: 5px" href="/users/create">Add New User</a>
  </h1>
  <div style="margin: 15px;"></div>
</section>
<div class="content">
  <div class="clearfix"></div>
  <div class="clearfix"></div>
    <div class="box box-primary">
        <div class="box-body table-responsive">
          <table class="table table-striped text-center" id="users-table">
              <thead>
                  <th>Fullname</th>
                  <th>Email</th>
                  <th>Mobile</th>
                  <th>Staff</th>
                  <th>Venue</th>
                  <th>Organiser</th>
                  <th>Admin</th>
                  <th>Date Joined</th>
                  <th>Last Update</th>
                  <th colspan="3">Action</th>
              </thead>
              <tbody>
              {% for user in users %}
                  <tr>
                      <td>{{ user.fullname }}</td>
                      <td>{{ user.email }}</td>
                      <td>{{ user.mobile }}</td>

                      {% if user.isStaff %}
                        <td><span class="text-green"><i class="fa fa-check-circle"></i></span></td>
                      {% else %}
                        <td><span class="text-red"><i class="fa fa-times-circle"></i></span></td>
                      {% endif %}

                      {% if user.isVenue %}
                        <td><span class="text-green"><i class="fa fa-check-circle"></i></span></td>
                      {% else %}
                        <td><span class="text-red"><i class="fa fa-times-circle"></i></span></td>
                      {% endif %}

                      {% if user.isOrganizer %}
                        <td><span class="text-green"><i class="fa fa-check-circle"></i></span></td>
                      {% else %}
                        <td><span class="text-red"><i class="fa fa-times-circle"></i></span></td>
                      {% endif %}

                      {% if user.isAdmin %}
                        <td><span class="text-green"><i class="fa fa-check-circle"></i></span></td>
                      {% else %}
                        <td><span class="text-red"><i class="fa fa-times-circle"></i></span></td>
                      {% endif %}

                      <td><span class="label label-success">{{ formatTime(user.createdAt) }}</span></td>
                      <td><span class="label label-warning">{{ formatTime(user.updatedAt) }}</span></td>
                      <td>
                        <form class="" action="" method="post">
                          <div class='btn-group'>
                              <a href="/users/{{ user._id }}" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-eye-open"></i></a>
                              <a href="/users/{{ user._id }}/edit" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-edit"></i></a>
                              <a href="/users/{{ user._id }}" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-trash"></i></a>
                          </div>
                        </form>
                      </td>
                  </tr>
                {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
</div>


{% endblock %}
