{% extends "master" %}

{% block content %}

<div class="content">
  <div class="clearfix"></div>
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Users ({{ users.length }})</h3>
      </div>
      <div class="box-body table-responsive">
        <table class="table table-hover">
          <thead>
              <th>Fullname</th>
              <th>Email</th>
              <th>Mobile</th>
              <th>Profile</th>
              <th>Date Joined</th>
              <th>Last Update</th>
              <th colspan="3">Action</th>
          </thead>
          <tbody>
          {% for user in users %}
              <tr>
                  <td>{{ user.fullname }}</td>
                  <td>{{ user.email }}</td>
                  <td>{{ user.mobile }}</td>
                  <td>
                    {% if user.isAdmin %}
                      <span class="label label-primary">Admin</span>
                    {% elif user.isStaff %}
                      <span class="label label-success">Staff</span>
                    {% elif user.isOrganizer %}
                      <span class="label label-info">Organiser</span>
                    {% elif user.isVenue %}
                      <span class="label label-warning">Venue</span>
                    {% else %}
                      <span class="label label-danger">N/A</span>
                    {% endif %}
                  </td>
                  <td><span class="label label-default">{{ formatTime(user.createdAt) }}</span></td>
                  <td><span class="label label-default">{{ formatTime(user.updatedAt) }}</span></td>
                  <td>
                    <form class="" action="" method="post">
                      <div class='btn-group'>
                          <a href="/users/{{ user._id }}" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-eye-open"></i></a>
                          <a href="/users/{{ user._id }}/edit" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-edit"></i></a>
                          <a href="/users/{{ user._id }}" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-trash"></i></a>
                      </div>
                    </form>
                  </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
</div>

<a class="btn bg-purple fab" href="/users/create"><i class="fa fa-plus"></i></a>
{% endblock %}
