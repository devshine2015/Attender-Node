<div class="box-body">
  <div class="form-group">
    <label for="fullname">Full Name</label>
    <input type="text" name="fullname" class="form-control" id="fullname" placeholder="Enter Name" required value="{{ user.fullname | title }}">
  </div>
  <div class="row">
    <div class="form-group col-sm-6">
      <label for="email">Email</label>
      <input type="email" name="email" class="form-control" id="email" placeholder="Enter Email" required value="{{ user.email }}">
    </div>
    <div class="form-group col-sm-6">
      <label for="mobile">Mobile</label>
      <input type="text" name="mobile" class="form-control" id="mobile" placeholder="Enter mobile" required value="{{ user.mobile }}">
    </div>
  </div>
  <div class="row">
    {% if edit %}

      <div class="form-group col-sm-12">
        <label for="password">New Password</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="Enter New Password">
      </div>
      <div class="col-sm-12">
        <p class="text-yellow">Leave as blank if you don't want to change the password</p>
      </div>
    {% else %}
      <div class="form-group col-sm-12">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="Enter Password" required>
      </div>
    {% endif %}
  </div>
  <div class="form-group">
    <div class="checkbox">
      <label><input name="isAdmin" type="checkbox" {% if user.isAdmin %} checked {% endif %}> Admin</label>
    </div>
  </div>
</div>
