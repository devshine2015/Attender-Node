{% extends "master" %}

{% block content %}

  <div class="row">
    <div class="col-xs-12">
      <div class="content">
          <div class="box box-primary box-solid ">
            <div class="box-header with-border">Edit User</div>
              <div class="box-body">
                {{ form.open({action: 'Admin/UserController.update', params: {'id': user._id} }) }}
                  {{ csrfField }}
                    {% include 'user/form' %}
                    <div class="box-footer">
                      <button type="submit" class="btn btn-primary pull-right">Save</button>
                    </div>
                {{ form.close() }}
              </div>
          </div>
      </div>
    </div>
  </div>

{% endblock %}
