{% extends "master" %}

{% block content %}
<section class="content-header">
  <h1 class="pull-left">Venues ({{ venues.length }})</h1>
  <h1 class="pull-right">
     <a class="btn btn-primary pull-right" style="margin-top: -10px;margin-bottom: 5px" href="/venues/create">Add New Venue</a>
  </h1>
  <div style="margin: 15px;"></div>
</section>
<div class="content">
  <div class="clearfix"></div>
  <div class="clearfix"></div>
    <div class="box box-primary">
        <div class="box-body table-responsive">
          <table class="table table-striped text-center" id="users-table">
              <thead>
                  <th></th>
                  <th>Name</th>
                  <th>Manager Name</th>
                  <th>Type</th>
                  <th>Services</th>
                  <th>Date Joined</th>
                  <th colspan="3">Action</th>
              </thead>
              <tbody>
              {% for venue in venues %}
                  <tr>
                      <td><img src="{{ venue.image }}" style="height: auto; width: 128px;" alt="VENUE_IMAGE"></td>
                      <td>{{ venue.name }}</td>
                      <td>{{ venue.managerName }}</td>
                      <td style="max-width: 100px;">
                        {% for type in venue.type %}
                          <span class="label label-primary">{{ type | title }}</span>
                        {% else %}
                          <span class="label label-danger">N/A</span>
                        {% endfor %}
                      </td>
                      <td style="max-width: 100px;">
                        {% for service in venue.services %}
                          <span class="label label-primary">{{ service | title }}</span>
                        {% else %}
                          <span class="label label-danger">N/A</span>
                        {% endfor %}
                      </td>
                      <td><span class="label label-success">{{ formatTime(venue.createdAt) }}</span></td>
                      <td>
                        <form class="" action="" method="post">
                          <div class='btn-group'>
                              <a href="/venues/{{ venue._id }}" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-eye-open"></i></a>
                              <a href="/venues/{{ venue._id }}/edit" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-edit"></i></a>
                              <a href="/venues/{{ venue._id }}/delete" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-trash"></i></a>
                          </div>
                        </form>
                      </td>
                  </tr>
                {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
</div>


{% endblock %}
