<div id="venueProfile" class="row" style="display:none;">
  <div class="col-lg-10 col-lg-offset-1">
    <hr>
    <div class="form-group">
      <label>Venue Name</label>
      <input id="vname" type="text" class="form-control" value="">
    </div>
    <div class="form-group">
      <label>Manager Name</label>
      <input id="vmanager_name" type="text" class="form-control" placeholder="Optional" value="">
    </div>
    <div class="form-group">
      <label>Number of Employees</label>
      <input id="vnumber_employee" class="form-control" type="number" name="" value="">
    </div>
    <div class="form-group">
      <label class="control-label">Type of Venue</label>
      <select id="vtypes" class="form-control select2-multiple" style="width: 100%;" multiple>
        {% for type in venue_types %}
          <option value="{{type}}">{{ type | title }}</option>
        {% endfor %}
  		</select>
    </div>
    <div class="form-group">
      <label class="control-label">Services</label>
      <select id="vservices" class="form-control select2-multiple" style="width: 100%;" multiple>
        {% for service in venue_services %}
          <option value="{{service}}">{{ service | title }}</option>
        {% endfor %}
  		</select>
    </div>
    <div class="form-group">
      <label class="control-label">Location</label>
      <input id="vlocation" type="text" class="form-control" name="" value="">
    </div>
    <hr>
    <label>Opening Hours</label>
    <br><br>
    <div class="form-group">
      <label class="text-muted">Monday - Friday</label>
      <br>
      <div class="row">
        <div class="col-xs-6">
          <label class="text-muted"><small>Opening</small></label>
          <input id="vweekday_start" type="text" class="form-control timepicker">
        </div>
        <div class="col-xs-6">
          <label class="text-muted"><small>Closing</small></label>
          <input id="vweekday_end" type="text" class="form-control timepicker">
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="text-muted">Saturday - Sunday</label>
      <br>
      <div class="row">
        <div class="col-xs-6">
          <label class="text-muted"><small>Opening</small></label>
          <input id="vweekend_start" type="text" class="form-control timepicker">
        </div>
        <div class="col-xs-6">
          <label class="text-muted"><small>Closing</small></label>
          <input id="vweekend_end" type="text" class="form-control timepicker">
        </div>
      </div>
    </div>
    <hr>
    <div style="text-align: center">
      <button id="saveVenue" type="button" class="btn btn-info" name="button">Save</button>
    </div>
  </div>
</div>
