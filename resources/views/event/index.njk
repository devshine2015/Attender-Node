{% extends "master" %}

{% block content %}
<section class="content-header">
  <h1 class="pull-left">Events ({{ events.length }})</h1>
  <h1 class="pull-right">
     <a class="btn btn-primary pull-right" style="margin-top: -10px;margin-bottom: 5px" href="/events/create">Add New Event</a>
  </h1>
  <div style="margin: 15px;"></div>
</section>
<div class="content">
  <div class="clearfix"></div>
  <div class="clearfix"></div>
    <div class="box box-primary">
        <div class="box-body table-responsive">
          <table class="table table-striped text-center" id="users-table">
              <thead>
                  <th></th>
                  <th>Name</th>
                  <th>Venue</th>
                  <th>Date</th>
                  <th>Creation</th>
                  <th colspan="3">Action</th>
              </thead>
              <tbody>
              {% for event in events %}
                  <tr>
                      <td><img src="{{ event.image }}" style="height: auto; width: 128px;"></td>
                      <td>{{ event.name }}</td>
                    
                      <td><a href="/venues/{{ event.venueId._id }}" target="_blank">{{ event.venueId.name | title }}</a></td>
                      <td>
                        <span class="label label-primary">{{ readableDate(event.date) }}</span>
                        <span class="label label-primary">{{ event.time.start }} - {{ event.time.end }}</span>
                      </td>
                      <td><span class="label label-success">{{ formatTime(event.createdAt) }}</span></td>
                      <td>
                        <form class="" action="" method="post">
                          <div class='btn-group'>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-eye-open"></i></a>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-edit"></i></a>
                              <a href="" class='btn btn-default btn-xs'><i class="glyphicon glyphicon-trash"></i></a>
                          </div>
                        </form>
                      </td>
                  </tr>
                {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
</div>


{% endblock %}
